		log.info("상품 수 : {}", prlen);
		
		for (int i = 0; i<prlen; i++) {
			// 상품명 크롤
			String prName = doc1.select("div.prod-body")
								.get(i)
								.getElementsByClass("prod-name")
								.html()
								.split(">")[2];
			
			///////////////////////////////////////////////////////////
			
